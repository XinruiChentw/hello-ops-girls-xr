    server {
        listen       80;
        listen       [::]:80;
        server_name  "{{ domain_name }}";

        location / {
            return 301 http://$host/public/;
        }

        location /public/ {
            proxy_pass http://$host:8000/;
        }

        error_page 404 /404.html;
        location = /404.html {
        }

        error_page 500 502 503 504 /50x.html;
        location = /50x.html {
        }
    }